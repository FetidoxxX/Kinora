<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/btnfondoOscuroGeneroAdmin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/fondo_oscurecido"
        android:scaleType="fitXY"
        android:alpha="0.6"
        android:clickable="true"
        android:focusable="true"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="330dp"
        android:layout_height="536dp"
        android:background="@drawable/fondo_creacion"
        android:dividerPadding="8dp"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:showDividers="middle"
        app:layout_constraintBottom_toBottomOf="@+id/btnfondoOscuroGeneroAdmin"
        app:layout_constraintEnd_toEndOf="@+id/btnfondoOscuroGeneroAdmin"
        app:layout_constraintStart_toStartOf="@+id/btnfondoOscuroGeneroAdmin"
        app:layout_constraintTop_toTopOf="@+id/btnfondoOscuroGeneroAdmin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnVolverGenero"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="16dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/agregar" />

            <TextView
                android:id="@+id/txt_Genero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:text="Generos"
                android:textColor="#FDFDFD"
                android:textSize="21sp"
                app:layout_constraintStart_toEndOf="@+id/btnCreacion"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPeliculas"
            android:layout_width="match_parent"
            android:layout_height="386dp"
            android:paddingHorizontal="8dp"
            app:layout_constraintBottom_toTopOf="@+id/navBarInclude"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchView"
            tools:listitem="@layout/item_cosas_pelicula" />

        <LinearLayout
            android:id="@+id/btnCrearGeneroVista"
            android:layout_width="114dp"
            android:layout_height="40dp"
            android:layout_marginStart="105dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="169dp"
            android:layout_marginBottom="150dp"
            android:background="@drawable/btnnegroblanco"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scroll">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="Crear Genero"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>