<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:id="@+id/despliegue_nav_plus">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="409dp"
        android:layout_height="237dp"
        android:background="@drawable/fondo_nav_expand"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></ImageView>

    <ImageButton
        android:id="@+id/btnPeticiones"
        android:layout_width="69dp"
        android:layout_height="63dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="72dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:srcCompat="@drawable/list" />

    <ImageButton
        android:id="@+id/btnUsuario"
        android:layout_width="45dp"
        android:layout_height="46dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Usuario"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/btnUsuario"
        app:layout_constraintStart_toStartOf="@+id/btnUsuario"
        app:layout_constraintTop_toBottomOf="@+id/btnUsuario" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peticiones"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/btnPeticiones"
        app:layout_constraintStart_toStartOf="@+id/btnPeticiones"
        app:layout_constraintTop_toBottomOf="@+id/btnPeticiones" />


</androidx.constraintlayout.widget.ConstraintLayout>