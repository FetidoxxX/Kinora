<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|center_horizontal"
    android:padding="32dp"
    android:background="@android:color/transparent">

    <!-- Texto de ayuda -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresa el código de 6 dígitos que enviamos a tu correo."
        android:textColor="@color/kinora_text_hint"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"/>

    <!-- Campo de Código -->
    <EditText
        android:id="@+id/et_recuperar_codigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext"
        android:hint="Código de 6 dígitos"
        android:inputType="number"
        android:maxLength="6"
        android:padding="14dp"
        android:textColor="@color/white"
        android:textColorHint="@color/kinora_text_hint"
        android:layout_marginBottom="16dp"/>

    <!-- Botón Verificar -->
    <Button
        android:id="@+id/btn_verificar_codigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:text="Verificar"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@color/kinora_purple_accent"
        app:cornerRadius="12dp"/>

    <!-- Link Reenviar Código -->
    <TextView
        android:id="@+id/tv_reenviar_codigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reenviar código"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>