<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|center_horizontal"
    android:padding="32dp"
    android:background="@android:color/transparent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresa tu nueva contraseña. Asegúrate de que sea segura."
        android:textColor="@color/kinora_text_hint"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"/>

    <EditText
        android:id="@+id/et_nueva_clave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext"
        android:hint="Nueva contraseña"
        android:inputType="textPassword"
        android:padding="14dp"
        android:textColor="@color/white"
        android:textColorHint="@color/kinora_text_hint"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/et_confirmar_clave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext"
        android:hint="Confirmar contraseña"
        android:inputType="textPassword"
        android:padding="14dp"
        android:textColor="@color/white"
        android:textColorHint="@color/kinora_text_hint"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_guardar_clave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:text="Guardar Contraseña"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@color/kinora_purple_accent"
        app:cornerRadius="12dp"/>

</LinearLayout>