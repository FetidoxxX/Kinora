<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Usuario_seleccion_sillas"
    android:background="@drawable/fondo">

    <!-- Tus vistas existentes (Título y Logo) -->
    <TextView
        android:id="@+id/tv_cines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="32dp"
        android:text="Seleccione sus sillas"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="56dp"
        android:layout_height="61dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="Descripción del botón"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <!-- Elementos nuevos: Pantalla y RecyclerView para las sillas -->

    <View
        android:id="@+id/view_pantalla"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_cines"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_pantalla_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PANTALLA"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/view_pantalla"
        app:layout_constraintStart_toStartOf="@id/view_pantalla"
        app:layout_constraintEnd_toEndOf="@id/view_pantalla" />

    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/tv_pantalla_label"
        app:layout_constraintBottom_toTopOf="@id/btn_cancelar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_sillas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_silla"
            tools:itemCount="150" />
    </HorizontalScrollView>



    <!-- Tus botones existentes -->



    <Button
        android:id="@+id/btn_cancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#6C6C98"
        android:text="Cancelar"
        app:layout_constraintBottom_toTopOf="@id/navBarInclude"
        app:layout_constraintEnd_toStartOf="@id/btn_confirmar"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/btn_confirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#6C6C98"
        android:text="Confirmar"
        app:layout_constraintBottom_toTopOf="@id/navBarInclude"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_cancelar" />
    <!-- He re-ajustado las constraints de los botones para que estén por encima de la barra de navegación y mejor distribuidos -->


    <include
        android:id="@+id/navBarInclude"
        layout="@layout/nav_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>